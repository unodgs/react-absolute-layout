{
    "compilerOptions": {
        "jsx": "react",
        "module": "system",
        "moduleResolution": "node",
        "declaration": false,
        "target": "es6",
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "outDir": "./build",
        "sourceMap": true,
        "allowJs": false,
        "pretty": true
    },
    "include": [
        "./src/**/*",
        "./typings/**/*"
    ],
    "exclude": [
        "node_modules",
        "logs",
        "build",
        "dist",
        "temp",
        ".idea"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
